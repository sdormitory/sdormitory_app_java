<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.sdormitory.sys.dao.SysRoleDeptDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.sdormitory.sys.entity.SysRoleDept" id="sysRoleDeptMap">
        <result property="id" column="id"/>
        <result property="roleId" column="role_id"/>
        <result property="deptId" column="dept_id"/>
    </resultMap>
    <select id="queryDeptIdList" resultType="java.lang.Long">
        select dept_id from sys_role_dept where role_id in
        <foreach item="roleId" collection="roleIdList" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>


</mapper>